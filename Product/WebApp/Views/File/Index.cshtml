<script type="text/javascript">
    setTimeout(function(){
            window.location.href = "download?f=" + "@ViewBag.f";
         }, 5000);

</script>
<div class="file-container">
    <div class="d-flex justify-content-center">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8">
              <div class="shadow-0 file-info p-4 m-5">
                    <div class="d-flex justify-content-center">
                        <div class="mt-1 mr-3">
                            <a rel="nofollow" href="download?f=@ViewBag.f"><i class="fas fa-2x fa-download"></i></a>
                        </div>
                        <div class="file-prompt">
                            <p>The requested file will begin downloading automatically in 3 seconds. If your download does not start, please click the download icon.</p>
                        </div>
                    </div>
              </div>
        </div>      
    </div>
</div>