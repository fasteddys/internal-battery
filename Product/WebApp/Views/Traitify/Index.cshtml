@using System.Net
@using UpDiddy.ViewModels
@model TraitifyViewModel
  <div>
       <form id="AssessmentForm" asp-controller="Traitify" asp-action="Index">
                        <div class="form-group row">
                            <label for="FirstName" class="col-sm-2 col-form-label">First Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="FirstName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="FirstName" class="col-sm-2 col-form-label">Last Name</label>
                            <div class="col-sm-10">
                                <textarea class="form-control"  asp-for="LastName"></textarea>
                            </div>
                        </div>
                         <div class="form-group row">
                            <label for="Email" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" asp-for="Email"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12 text-right">
                                @Html.Partial("Components/Buttons/_Action", new ActionButtonViewModel {
                                    Text = "Create",
                                    ChosenColorScheme = "cc-cscheme-secondary",
                                    Form = "AssessmentForm",
                                    FitToText = true,
                                    ButtonAction = ActionButtonViewModel.Action.SUBMIT
                                })
                            </div>
                        </div>
                    </form>
    </div>