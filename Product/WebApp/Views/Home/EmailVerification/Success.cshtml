
<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <div class="mt-3 pt-3">
                <h2>Email Verification Successful!</h2>
                <p>
                    Thank you for verifying your email. You will now be redirected.
                    If for some reason you are not redirected, don't worry, just click <a href="@ViewBag.returnUrl">here</a>.
                </p>
                <div class="circle-wrapper">
                    <div class="outerCircle"></div>
                    <div class="innerCircle"></div>
                    <div class="center"><span id="count"></span></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var count = 7;
            var params = new URLSearchParams(window.location.search);
            var returnUrl = params.has('returnUrl') ? params.get('returnUrl') : '/Home/Profile';
            $('#count').text(count);
            var timer = setInterval(function () {
                if (count <= 0) {
                    window.location = returnUrl;
                    clearInterval(timer);
                    $('.circle-wrapper').html('Redirecting...');
                    return;
                }
                count -= 1;
                $('#count').text(count);
            }, 1000);
        });
    </script>
}