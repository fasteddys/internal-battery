<script>
   const baseUrl = @Html.Raw(Json.Serialize(@Model.BaseUrl));
   
   $(document).ready(function(){
   
   var data = @Html.Raw(Json.Serialize(@Model.JobCount));
   var baseurl = @Html.Raw(Json.Serialize(@Model.BaseUrl));
   initialize(data,baseurl);
   
           

   
   });
   
   function initialize(model, baseurl) {
   for (var i = 0; i < model.length; i++) {
       var key = model[i].stateId;
       if (mapdata.states[key].prefix == "MD" || "VA") {
           var prefix = mapdata.states[key].prefix;
           var stname = mapdata.states[key].name;
           var companyPosting = model[i].companyPosting;
           var total = model[i].totalCount;
           var mappoint = '#' + prefix + '.map-point';
           $(mappoint + ' a').html(total);
           var options = {
               placement: 'right',
               title: stname,
               html: true,
               animation: true,
               placement: "top",
               content: buildContent(stname, prefix, companyPosting, total)
           };
           $(mappoint).popover(options);
           $(mappoint).show();
       }
   }
   }
   
   
   
   
   function  buildContent(stname, stprefix, cp, total) {
     var sturl =  "browse-jobs-location/us/" + stprefix + "/1";
     var string = '<div class="gmap-container-infowindow">' +
         '<div class="gmap-container-infowindow-total"><a rel="nofollow" href="' + sturl + '"> Total : ' + total + '</a></div>' +
         '<div class="gmap-container-infowindow-company">' + this.buildCompanyDiv(cp, stname) + '</div>' +
         '</div>';
     return string;
   }
   
   
     function buildCompanyDiv(cp, stname) {
     var str = "";
     for (var c in cp) {
         var url = "jobs?keywords=" + cp[c].companyName + "&location=" + stname;
         str += '<div>' +
             '<a rel="nofollow" href="' + url + '">' +
             cp[c].companyName + ' : ' + cp[c].jobCount.toString() +
             '</a>' +
             '</div>';
     }
     return str;
   }
   
   
</script>
