@Html.Partial("Admin/_AdminNavigation")
<section class="section cards-section mt-3 pt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <!-- New Subscriber Report Card-->
                <div class="card shadow mb-3">
                    <div class="card-header">New Users - 3 Week Review</div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Date Range</th>
                                    <th class="text-right" scope="col"># Users Created</th>
                                    <th class="text-right" scope="col"># Enrollments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in ViewBag.subscriberReport.Report)
                                {
                                    <tr>
                                        <td>@r.StartDate.ToShortDateString() -  @( r.EndDate == null ? "Present" : r.EndDate.ToShortDateString() )</td>
                                        <td class="text-right">@r.SubscriberCount</td>
                                        <td class="text-right">@r.EnrollmentCount</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="font-weight-bold">
                                <tr>
                                    <td class="text-uppercase">All Time:</td>
                                    <td class="text-right">@ViewBag.subscriberReport.Totals.SubscriberCount</td>
                                    <td class="text-right">@ViewBag.subscriberReport.Totals.EnrollmentCount</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <!-- New Subscriber Report Card-->
                <div class="card shadow mb-3">
                    <div class="card-header">Total User Breakdown By Partner</div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Partner</th>
                                    <th class="text-right" scope="col"># Users Created</th>
                                    <th class="text-right" scope="col"># Enrollments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in ViewBag.partnerReport.Report)
                                {
                                    <tr>
                                        <td>@r.PartnerName</td>
                                        <td class="text-right">@r.SubscriberCount</td>
                                        <td class="text-right">@r.EnrollmentCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        @* subscriber action tracking *@
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="card shadow mb-3">
                    <div class="card-header">Recruiter Action Summary</div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Email</th>
                                    <th scope="col">Action</th>
                                    <th class="text-right" scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in ViewBag.recruiterActionSummary)
                                {
                                <tr>
                                    <td>@r.RecruiterEmail</td>
                                    <td>@r.Action</td>
                                    <td class="text-right">@r.ActionCount</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="card shadow mb-3">
                    <div class="card-header">Subscriber Action Summary</div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Email</th>
                                    <th scope="col">Action</th>
                                    <th class="text-right" scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in ViewBag.subscriberActionSummary)
                                {
                                <tr>
                                    <td>@r.SubscriberEmail</td>
                                    <td>@r.Action</td>
                                    <td class="text-right">@r.ActionCount</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">
        $(".admin-nav-dashboard").addClass("active");
    </script>
}