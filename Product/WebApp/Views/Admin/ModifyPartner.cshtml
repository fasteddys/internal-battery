@using UpDiddyLib.Dto
@using UpDiddy.ViewModels
@model PartnerDto


<div id="AdminContainer" class="container-fluid bg-color-primary">
    <div class="container">
        <div class="row">
            <div class="col-md">
                <ul class="nav nav-nav-admin">
                    <li class="nav-link">
                        <a class="text-white" href="/admin/skills">Skills</a>
                    </li>
                    <li class="nav-link">
                        <a class="text-white" href="/marketing/campaignstatistics">Campaign Statistics</a>
                    </li>
                    <li class="nav-link active">
                        <a class="text-white" href="/admin/partners">Partners</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="PartnerModifyContainer" class="row mt-5">
    <div class="col-12">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form id="ModifyPartnerForm" asp-controller="Admin" asp-action="UpdatePartnerAsync">
                        <input type="hidden" value="@Model.PartnerGuid" asp-for="PartnerGuid" />
                        <div class="form-group row">
                            <label for="Name" class="col-sm-2 col-form-label">Partner Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Description" class="col-sm-2 col-form-label">Partner Description:</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" rows="3" asp-for="Description" value="@Model.Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12 text-right">
                                @Html.Partial("Components/Buttons/_Action", new ActionButtonViewModel {
                                    Text = "Update",
                                    ChosenColorScheme = "cc-cscheme-secondary",
                                    Form = "ModifyPartnerForm",
                                    FitToText = true,
                                    ButtonAction = ActionButtonViewModel.Action.SUBMIT
                                })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
