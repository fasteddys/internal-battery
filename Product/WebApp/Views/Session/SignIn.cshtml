@model UpDiddy.ViewModels.SignInViewModel
@{
    Layout = "_SimpleLayout";
    ViewData["Title"] = "Sign In";
}

<div class="simple-container">
    <div class="row">
        <div class="col-md-12 simple-title">
           CareerCircle Admin and Recruiter Sign In
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col col-md-5 mt-4">
            <form id="SignInForm" asp-controller="Session" asp-action="signin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div id="SignInValidationSummary" asp-validation-summary="All" class="text-danger" style="display:none;"></div>
                <div class="form-group">
                    <input asp-for="EmailAddress" name="EmailAddress" class="form-control input-lg" placeholder="Email Address" data-val="true" required />
                </div>
                <div class="form-group">
                    <input asp-for="Password" name="Password" class="form-control input-lg" placeholder="Password" data-val="true" required />
                </div>
                <div class="form-group">
                    <a href="/session/resetpassword">Forgot your password?</a>
                </div>
                <div class="form-group">
                    <div id="SignUpAction" class="col-12 no-padding">
                        <div class="action-container">
                            <button type="submit" class="button-container cc-cscheme-darkred skew-left-to-right font-bold">Sign In</button>
                        </div>
                    </div>
                </div>
                <hr />
      
            </form>
        </div>
    </div>
</div>