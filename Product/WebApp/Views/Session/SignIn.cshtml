@model UpDiddy.ViewModels.SignInViewModel
@{
    Layout = "_SimpleLayout";
    ViewData["Title"] = "Sign In";
}

<style type="text/css">
    .tos-container {
        max-height: 250px;
        overflow: auto;
        padding: 16px;
        margin-top: 20px;
    }
</style>

<div class="simple-container">
    <div class="row">
        <div class="col-md-12 simple-title">
            Sign in with your existing account
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col col-md-5">
            <form asp-controller="Session" asp-action="SignIn" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="EmailAddress" class="form-control input-lg" placeholder="Email Address" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control input-lg" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div id="SignUpAction" class="col-12 no-padding">
                        <div class="action-container">
                            <button type="submit" class="button-container cc-cscheme-darkred skew-left-to-right font-bold">Sign In</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    Don't have an account? <a href="/Session/SignUp" class="btn btn-primary">Sign up now</a>
                </div>
            </form>
        </div>
    </div>
</div>