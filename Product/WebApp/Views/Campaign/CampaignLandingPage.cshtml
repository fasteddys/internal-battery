@using Microsoft.AspNetCore.Mvc.Localization
@using UpDiddy.ViewModels.ButterCMS
@using UpDiddy.ViewModels
@using UpDiddyLib.Dto
@using System.Collections.Generic;
@using System;
@model CampaignLandingPageViewModel;
<div id="CampaignContainer" class="wozu-signup">
    <div class="cc-campaign-sign-up-band row no-bg-tint" style="background-image: url('@Model.hero_image');">
        <div class="col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-7 col-lg-8 cc-campaign-sign-up-band-left-container  d-flex align-items-center">
                        <div class="row">
                            <div class="col no-padding">
                                <div class="row">
                                    <div class="col-12 no-padding">
                                        <div class="row">

                                            <div class="col-12 hero-header font-bold">
                                                <h1>@Model.hero_title</h1>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-flex flex-column bd-highlight mb-3 mt-3">
                                                    @Html.Raw(Model.hero_content)
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-9 hero-sub-image d-none d-md-block">
                            <img src="@Model.hero_sub_image" />
                        </div>
                    </div>
                    <div class="col-12 col-md-5 col-lg-4 cc-campaign-sign-up-band-right-container no-padding">
                        <div class="cc-campaign-sign-up-container">
                            <div class="row">
                                <div class="col-12 container-align-center hero-sub-image-main d-block d-md-none">
                                    <img src="@Model.hero_sub_image" />
                                </div>
                                <div class="col-12 no-padding sub-header font-bold">
                                    @if(Model.isLoggedIn)
                                    {
                                        @Model.existing_user_form_header
                                    } else
                                    {
                                        @Model.signup_form_header
                                    }
                                </div>
                                <div class="col-12 no-padding mini-header">
                                    @if(Model.isLoggedIn)
                                    {
                                        @Model.existing_user_form_text
                                    } else
                                    {
                                        @Model.signup_form_text
                                    }
                                </div>
                                <div class="col-12 no-padding">
                                    @if(Model.isLoggedIn && Model.iswaitlist)
                                    {                                    
                                      @Html.Partial("Components/Authentication/_SignUpExistingUser", Model.signUpViewModel)
                                    }
                                    else
                                    {
                                      @Html.Partial("Components/Authentication/_SignUp", Model.signUpViewModel)
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial(ContentBandViewModel.VIEW_FILE, new ContentBandViewModel()
    {
        Header = Model.content_band_header,
        Elements = new List<string>()
        {
            @"<div class='row'>
                <div class='col-lg-8 offset-lg-2'>" +
                    Model.content_band_text +
                @"</div>
            </div>"
        }
    });
</div>