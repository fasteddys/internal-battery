@model ButterCMS.Models.PostsResponse
<script type="text/javascript">
    function openPost(post) {
        window.location.href = "http://localhost:5000/blog/" + post.id;
    }
</script>
<div class="d-flex justify-content-center p-5">
    <form method="get" asp-area="" asp-controller="blog" asp-action="search">
        <input name="query" type="text" placeholder="Search..">
        <button type="submit">Submit</button>
    </form>
</div>
<div class="blog-container">
    @if (Model != null)
    {
        @foreach (var post in Model.Data)
        {
            <div style="margin:15px;border-style:ridge;">
                @Html.Partial("Partials/_PostItem", post)
            </div>
        }
        <div class="d-flex justify-content-center">
            <div class="p-2">
                <a asp-controller="blog" asp-route-page="@ViewBag.PreviousPage"> Previous</a>
            </div>
            <div class="p-2">
                <a asp-controller="blog" asp-route-page="@ViewBag.NextPage">Next</a>
            </div>
        </div>
    }
</div>
