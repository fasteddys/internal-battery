@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using UpDiddy.ViewModels;
@model JobSearchViewModel;

@{ bool showCompJobsHeader = this.ViewContext?.HttpContext?.Response?.StatusCode == 404;}

<div class="job-container">
    @if (Model.JobsSearchResult.Count != 0)
    {
        @if (showCompJobsHeader)
        {
            <h2>
                The job you selected is unavailable.
                <br />
                Listed below are comparable jobs for @Model?.Keywords&nbsp;@Model?.Location
            </h2>
        }
    
        foreach (var jobSearchResult in Model.JobsSearchResult)
        {
            <div class="job-tile">
                <div class="row">
                    <div class="col-12 col-md-3">
                        <div class="row">
                            <span class="job-title">@jobSearchResult.Title</span>
                        </div>
                        <div class="row">
                            <span class="job-location">@jobSearchResult.Province - @jobSearchResult.City</span>
                        </div>
                        <div class="row">
                            <span class="job-post-date">Posted- @jobSearchResult.PostingDateUTC.ToShortDateString()</span>
                        </div>

                    </div>
                    <div class="col-12 col-md-6">
                        <div class="row">
                            <span class="job-description"> @jobSearchResult.Description</span>
                        </div>
                        <div class="row">
                            <a target="_blank" href="/jobs/@jobSearchResult.JobPostingGuid">More</a>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">

                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="no-job-text">
            There are no results available.
        </div>
    }
</div>