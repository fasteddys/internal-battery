@using UpDiddyLib.Dto;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using UpDiddyLib.Dto;
@model UpDiddy.ViewModels.JobSearchViewModel

<div class="job-container">
    @if (Model.JobsSearchResult.Count != 0)
    {
        foreach (var jobSearchResult in Model.JobsSearchResult)
        {
            string url = $"/jobs/{jobSearchResult.JobPostingGuid}";
            url = GoogleCloudEventsTrackingDto.AddParametersToUrl(url, Model.RequestId, Model.ClientEventId);
            <div class="job-tile">
                <div class="row">
                    <div class="col-12 col-md-3">
                        <div class="row">
                            <span class="job-title">@jobSearchResult.Title</span>
                        </div>
                        <div class="row">
                            <span class="job-location">@jobSearchResult.Province - @jobSearchResult.City</span>
                        </div>
                        <div class="row">
                            <span class="job-post-date">Posted- @jobSearchResult.PostingDateUTC.ToShortDateString()</span>
                        </div>

                    </div>
                    <div class="col-12 col-md-6">
                        <div class="row">
                            <span class="job-description"> @jobSearchResult.Description</span>
                        </div>
                        <div class="row">
                            <a target="_blank" href="@url">More</a>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">

                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="no-job-text">
            There are no results available.
        </div>
    }
</div>